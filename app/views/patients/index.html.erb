<% content_for :title, "Patient List" %>

<h1>Patient List</h1>

<%= link_to 'Add Patient', new_patient_path, class:"button" %>

<table>
  <thead>
    <tr>
      <th>MRN</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.mrn %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= link_to 'Show', patient %> |
            <%= link_to 'Edit', edit_patient_path(patient) %> |
            <%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4 id="notice"><%= notice %></h4>
