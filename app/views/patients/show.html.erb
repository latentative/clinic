<% content_for :title, "Patient Details" %>

<h1>Patient Details</h1>
<div class="text-right"><%= link_to 'Patient List', patients_path, class:"button" %></div>

<table>
  <tr>
    <th class="small-3 text-right">MRN</th>
    <td><%= @patient.mrn %></td>
  </tr>
  <tr>
    <th class="small-3 text-right">First Name</th>
    <td><%= @patient.first_name %></td>
  </tr>
  <tr>
    <th class="small-3 text-right">Middle Name</th>
    <td><%= @patient.middle_name %></td>
  </tr>
  <tr>
    <th class="small-3 text-right">Last Name</th>
    <td><%= @patient.last_name %></td>
  </tr>
  <tr>
    <th class="small-3 text-right">Weight</th>
    <td><%= @patient.weight %></td>
  </tr>
  <tr>
    <th class="small-3 text-right">Height</th>
    <td><%= @patient.weight %></td>
  </tr>
</table>

<div><%= link_to 'Add Encounter', new_encounter_path, class:"button" %></div>

<%= render 'layout/encounters', encounters:@patient.encounter %>